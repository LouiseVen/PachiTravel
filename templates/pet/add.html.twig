{% extends 'base.html.twig' %}

{% block title %}Add a New Pet{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card">
                <div class="card-header text-center">
                    <h2>Add a New Pet</h2>
                </div>
                <div class="card-body">
                    {{ form_start(form) }}
                    <div class="mb-3">
                        {{ form_label(form.name) }}
                        {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="mb-3">
                        {{ form_label(form.height) }}
                        {{ form_widget(form.height, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="mb-3">
                        {{ form_label(form.weight) }}
                        {{ form_widget(form.weight, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="mb-3">
                        {{ form_label(form.categorised) }}
                        {{ form_widget(form.categorised, {'attr': {'class': 'form-check-input'}}) }}
                    </div>
                    <div class="mb-3">
                        {{ form_label(form.picture) }}
                        {{ form_widget(form.picture, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <button type="submit" class="btn btn-primary">Save</button>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
