{% extends 'base.html.twig' %}

{% block title %}Account Page{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header text-center">
                    <h2>Welcome, {{ user.getUsername() }}</h2>
                </div>
                <div class="card-body">
                    <div class="text-center">
                        <img src="{{ asset('images/profile-picture.jpg') }}" class="rounded-circle img-fluid profile-picture" alt="Profile Picture">
                    </div>
                    <div class="mt-4">
                        <h4>Name:</h4>
                        <p>{{ user.getUsername() }}</p>
                        <a href="{{ path('app_name') }}" class="btn btn-outline-primary btn-sm">Edit Name</a>
                    </div>
                    <div class="mt-3">
                        <h4>Email:</h4>
                        <p>{{ user.getEmail() }}</p>
                        <a href="{{ path('app_email') }}" class="btn btn-outline-primary btn-sm">Edit Email</a>
                    </div>
                    <div class="mt-3">
                        <h4>Pets:</h4>
                        <ul>
                            {% for pet in user.getPets() %}
                                <li>{{ pet.name }}</li>
                                {% if pet.picture is not empty %}
                                    {# <a href="{{ path('app_pet_edit', {'id': pet.id}) }}"> #}
                                        <img src="{{ asset(pet.picture) }}" alt="{{ pet.name }}" class="rounded-circle">
                                    {# </a> #}
                                {% endif %}
                            {% endfor %}
                        </ul>
                        <a href="{{ path('app_pet') }}" class="btn btn-outline-primary btn-sm">Manage Pets</a>
                    </div>
                </div>
                <div class="card-footer text-center">
                    <a href="{{ path('app_logout') }}" class="btn btn-danger">Log out</a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
